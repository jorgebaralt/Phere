<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_cardview"
            android:layout_width="match_parent"
            android:layout_height="135dp">
            <ImageView
                android:id="@+id/img_profileImg_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/materialdesignblue"
               />
            <TextView
                android:id="@+id/txt_phereName_cardview"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:shadowColor="#000000"
                android:text="Phere Name"
                android:width="2dip"
                android:shadowRadius="10"
                android:textSize="24sp"
                />


        </RelativeLayout>


        <TextView
            android:id="@+id/txt_location_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:text="Location"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_date_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="When"
            android:textSize="15dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>